<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.coaching.com.simplecalc.MainActivity">

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:gravity="center"
        android:id="@+id/et1" />
        <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/et2"
            android:layout_below="@+id/et1"
            android:layout_alignLeft="@+id/et1"
            android:layout_alignStart="@+id/et1"
            android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/bAdd"
        android:layout_below="@+id/et2"
        android:layout_alignLeft="@+id/et2"
        android:layout_alignStart="@+id/et2"
        android:layout_marginTop="39dp"
         />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="MUL"
        android:id="@+id/bMul"
        android:layout_alignTop="@+id/bSub"
        android:layout_toRightOf="@+id/bSub"
        android:layout_toEndOf="@+id/bSub" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="SUB"
        android:id="@+id/bSub"
        android:layout_alignTop="@+id/bAdd"
        android:layout_toRightOf="@+id/bAdd"
        android:layout_toEndOf="@+id/bAdd" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="DIV"
        android:id="@+id/bDiv"
        android:layout_alignTop="@+id/bMul"
        android:layout_alignRight="@+id/et2"
        android:layout_alignEnd="@+id/et2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Result"
        android:gravity="center"
        android:id="@+id/tvResult"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
